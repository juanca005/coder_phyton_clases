#EJERCICIO 1

def saludar(ciudad):
    print("hola {}  " .format(ciudad) )     # f adelante sino devuelve un string

saludar("argentina")


#EJERCICIO 2

def media(mi_lista):

    longitud= len(mi_lista)
    media= sum(mi_lista)/longitud
    return media


    


lista = [2,5]
final = media(lista)

print (final)

#EJERCICIO 3

def es_multiplo(var1, var2):
    if var1 % var2 == 0:
        return True
    else:
        return False

valor_1 = int(input("ingrese el primer numero"))

valor_2 = int(input("ingrese el primer numero"))

if es_multiplo(valor_1, valor_2):
    
    print("es multiplo")
else:
    print("no  es multiplo")


