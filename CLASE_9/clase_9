#funciones

def miFuncionContar(valor):  #el retorno de una funcion sin return es NONE
    aux=0
    for valores in valor:
        aux=aux+1
    print(aux)

    return 0


miFuncionContar("hola")


def suma(num1,num2):
    total = num1+num2
    return total  #total es una variable local para la funcion y no la podria usar directo en el print de afuera

resultado_final = suma(2,2)    #rsultado final toma el return total


if resultado_final > 2:
    print("estamooo")
else:
    print("no estamosss")


